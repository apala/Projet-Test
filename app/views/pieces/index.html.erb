<h1>Listing pieces</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Ref</th>
    <th>Nom</th>
    <th>Prix</th>
    <th>Stock</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pieces.each do |piece| %>
  <tr>
    <td><%= piece.id %></td>
    <td><%= piece.ref %></td>
    <td><%= piece.nom %></td>
    <td><%= piece.prix %></td>
    <td><%= piece.stock %></td>
    <td><%= link_to 'Show', piece %></td>
    <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
    <td><%= link_to 'Destroy', piece, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

